{
  "manifest_version": 3,
  "name": "JustABooAway",
  "version": "1.0",
  "description": "A spooky Chrome extension for long-distance couples.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/gravestone.png",
      "48": "icons/gravestone.png",
      "128": "icons/gravestone.png"
    }
  },
  "icons": {
    "16": "icons/gravestone.png",
    "48": "icons/gravestone.png",
    "128": "icons/gravestone.png"
  },
  "permissions": [
    "storage",
    "notifications"
  ],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/" 
  ],
  "background": {
    "service_worker": "service-worker.js"
  }
}