{
  "manifest_version": 3,
  "name": "JustABooAway",
  "version": "1.0",
  "description": "A spooky Chrome extension for long-distance couples.",

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/gravestone.png",
      "48": "icons/gravestone.png",
      "128": "icons/gravestone.png"
    }
  },

  "icons": {
    "16": "icons/gravestone.png",
    "48": "icons/gravestone.png",
    "128": "icons/gravestone.png"
  },

  "permissions": [
    "storage",
    "notifications",
    "tabs"
  ],

  "host_permissions": [
    "<all_urls>",
    "https://generativelanguage.googleapis.com/"
  ],

  "background": {
    "service_worker": "service-worker.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],

  "web_accessible_resources": [
      {
        "resources": [
          "icons/ghost.png",
          "icons/GhostIdle.gif",
          "icons/GhostDie.gif",
          "iconsicons/GhostFly.gif",
          "icons/HauntedHead.gif",
          "icons/*.png",
          "icons/*.jpg"
        ],
        "matches": ["<all_urls>"]
      }
    ]
}